<div class="col-11 mx-auto">
  <div class="row mx-auto mb-5">
  <h4>注文履歴詳細</h4>
  </div>
</div>


<div class="col-12 mx-auto">
  <div class = "row">

     <div class = "col-7">
       <label><strong>注文情報</strong></label>
        <table class="border w-100">
          <tr>
            <th>注文日</th>
            <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
          <tr>
            <th>配送先</th>
            <td>
              <%= "〒" + @order.shipping_postalcode %><br>
              <%= @order.shipping_address %><br>
              <%= @order.shipping_name %>
            </td>
          </tr>
          <tr>
            <th>支払方法</th>
            <td><%= @order.payment_method_i18n %></td>
          </tr>
          <tr>
            <th>ステータス</th>
            <td><%= @order.order_status_i18n %></td>
          </tr>
        </table>
      </div>

      <div class="col-3">
        <label><strong>請求情報</strong></label>
        <table class="border w-100">
           <tr>
              <th class="col-4">商品合計</th>
              <td class="col-3"><%= @total.to_s(:delimited) %></td>
           </tr>

           <tr>
              <th class="col-4">配送料</th>
              <td class="col-3"><%= @order.shipping_charge.to_s(:delimited) %></td>
           </tr>

           <tr>
              <th class="col-4"><strong>ご請求金額</strong></th>
              <td class="col-3"><%= @order.amount.to_s(:delimited) %></td>
           </tr>

        </table>
      </div>
  </div>

  <div class = "row">

    <div class="col-9">
      <label><strong>注文内容</strong></label>
      <table class="border w-100">
        <thead>
          <tr>
            <th>商品</th>
            <th>単価（税込）</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @order.order_detail.each do |order_details| %>
          <tr>
            <td><%= order_details.item.name %></td>
            <td><%= order_details.price_including_tax.to_s(:delimited) %></td>
            <td><%= order_details.amount %></td>
            <td><%= order_details.subtotal.to_s(:delimited) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

</div>





