
   <div class="col-11 mx-auto">
      <div class="row mx-auto">
      <h2><span> 注文情報確認 </span></h2>
      </div>
   </div>


   <div class="col-12 mx-auto">
      <div class = "row">
         <div class = "col-8">
            <table border="1">
               <thead>
                <tr>
                  <th>商品名</th>
                  <th>単価（税込）</th>
                  <th>数量</th>
                  <th>小計</th>
                </tr>
               </thead>

               <tbody>
                <% @cart_items.each do |cart_item| %>
                  <tr>
                    <td>
                      <%#= cart_item.image %>
                      <%= cart_item.item.name %>
                    </td>
                    <td>
                      <%= cart_item.item.with_tax_price %>
                    </td>
                    <td>
                      <%= cart_item.amount %>
                    </td>
                    <td>
                      <%= cart_item.subtotal.to_s(:delimited) %>
                    </td>
                  </tr>
                <% end %>
               </tbody>
            </table>
         </div>

         <div class="col-4">
            <table border="1">
               <tr>
                  <th class="col-4">送料</th>
                  <td class="col-3"><%= @order.shipping_charge.to_s(:delimited) %></td>
               </tr>

               <tr>
                  <th class="col-4">商品合計</th>
                  <td class="col-3">
                   <%= @total.to_s(:delimited) %>
                  </td>
               </tr>

               <tr>
                  <th class="col-4">請求金額</th>
                  <td class="col-3"><%= @order.amount.to_s(:delimited) %></td>
               </tr>

            </table>
         </div>
      </div>

      <div class = "col-8">
         <div class = "row">
             <label><strong>支払方法</strong></label>
             <%= @order.payment_method_i18n %>
          </div>

          <div class = "row">
            <label><strong>お届け先</strong></label>
            <%= "〒" + @order.shipping_postalcode %>
            <%= @order.shipping_address %><br>
            <%= @order.shipping_name %>
          </div>
      </div>

      <%= form_with model: @order, url: orders_path, method: :post do |f| %>
         <div class="col-3 mx-auto">
           <%= f.hidden_field :customer_id %>
           <%= f.hidden_field :payment_method %>
           <%= f.hidden_field :amount %>
           <%= f.hidden_field :shipping_charge %>
           <%= f.hidden_field :shipping_name %>
           <%= f.hidden_field :shipping_postalcode %>
           <%= f.hidden_field :shipping_address %>
           <%= f.submit " 注文を確定する " ,class:'btn btn-success' %>
         </div>
      <% end %>




   </div>





