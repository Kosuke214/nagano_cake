<div class="container">
  <div class="row col-sm-12">
    <div class="col-2">
      <table class="border_title w-100">
        <thead>
          <tr align="center">
            <th class="border_bottom">ジャンル検索</th>
          </tr>
        </thead>

        <tbody>
          <% @genre.each do |genre| %>
            <tr>
              <td>
                <%= genre.name %>
              </td>
            </tr>
          <% end %>
        </tbody>

      </table>

    </div>
    <div class="col-9">

      <div class="picture">
          <div class="row">
            <div class="col-4">
              <%= image_tag @item.get_image %>
            </div>
            <div class="col-8">
              <div class="item-group">
                <div class="row">
                  <h4><%= @item.name %></h4>
                </div>
              </div>

              <div class="item-group">
                <div class="row">
                  <p><%= @item.introduction %></p>
                </div>
              </div>

              <div class="item-group">
                <div class="row align-items-end">
                  <h4 class="base">¥ <%= (@item.price*1.1).floor.to_s(:delimited) %> </h4>（税込）
                </div>
              </div>

              <div class="item-group mt-4">
                <div class="row">
                  <%= form_with model: @cart_item, url: cart_items_path do |f| %>
                    <%= f.hidden_field :customer_id, :value => current_customer.id %>
                    <%= f.hidden_field :item_id, :value => @item.id %>

                    <%= f.select :amount, *[1..10], { prompt: '個数選択' }, :class => "item-amount" %>
                    <%= f.submit " カートに入れる " ,class:'btn btn-success ml-5' %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

  </div>
</div>