<div class="container">
  <div class="row col-sm-12">
    <div class="col-3">
      <table class="border">
        <thead>
          <tr align="center">
            <th>ジャンル検索</th>
          </tr>
        </thead>

        <tbody>
          <% @genre.each do |genre| %>
            <tr>
              <td>
                <%= genre.name %>
              </td>
            </tr>
          <% end %>
        </tbody>

      </table>

    </div>
    <div class="col-9">
      <div class="row align-items-end">
        <h4 class="base">商品一覧</h4>(全<%= Item.count %>件)
      </div>



      <div class = "container">
        <div class = "row">
          <% @items.each do |item| %>
          <div class="col-3">
            <div class = "row">
              <%= link_to item_path(item.id) do %>
                <%= image_tag item.get_image %>
              <% end %>
            </div>
            <div class = "row"><%= item.name %></div>
            <div class = "row">¥<%= item.price.to_s(:delimited) %></div>
          </div>
        <% end %>
        </div>
      </div>
      <%= paginate @items %>

    </div>
  </div>
</div>