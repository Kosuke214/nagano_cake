<%= form_with model: @customer, url: customer_registration_path do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="container">
    <div class="col-10 mx-auto mb-5">
      <h4><strong>新規会員登録</strong></h4>
    </div>
  </div>

  <div class="container">
    <div class="col-sm-12 mx-auto">

      <div class="customer-form">
        <div class="row">
          <label class="col-3">名前</label>
          <div class="col-1">(姓)</div>
          <div class="col-3">
            <%= f.text_field :last_name, placeholder:"令和" %>
          </div>
          <div class="col-1">(名)</div>
          <div class="col-3">
            <%= f.text_field :first_name, placeholder:"道子" %>
          </div>
        </div>
      </div>

      <div class="customer-form">
        <div class="row">
          <label class="col-3">フリガナ</label>
          <div class="col-1">(セイ)</div>
          <div class="col-3">
            <%= f.text_field :last_name_kana, placeholder:"レイワ" %>
          </div>
          <div class="col-1">(メイ)</div>
          <div class="col-3">
            <%= f.text_field :first_name_kana, placeholder:"ミチコ" %>
          </div>
        </div>
      </div>

      <div class="customer-form">
        <div class="row">
          <label class="col-3">メールアドレス</label>
          <div class="col-1"></div>
          <div class="col-3">
            <%= f.text_field :email, placeholder:"sample@example.com" %>
          </div>
        </div>
      </div>

      <div class="customer-form">
        <div class="row">
          <label class="col-3">郵便番号（ハイフンなし）</label>
          <div class="col-1"></div>
          <div class="col-3">
            <%= f.text_field :postal_code, placeholder:"0000000" %>
          </div>
        </div>
      </div>

      <div class="customer-form">
        <div class="row">
          <label class="col-3">住所</label>
          <div class="col-1"></div>
          <div class="col-7">
            <%= f.text_field :customer_address, placeholder:"東京都渋谷区代々木神薗町0-0", style: "width:100%" %>
          </div>
        </div>
      </div>

      <div class="customer-form">
        <div class="row">
          <label class="col-3">電話番号（ハイフンなし）</label>
          <div class="col-1"></div>
          <div class="col-3">
            <%= f.text_field :telephone_number, placeholder:"00000000000" %>
          </div>
        </div>
      </div>

      <div class="customer-form">
        <div class="row">
          <label class="col-3">パスワード（６文字以上）</label>
          <div class="col-1"></div>
          <div class="col-3">

            <%= f.password_field :password, autocomplete: "new-password" %>

            <%#= f.text_field :encrypted_password %>
          </div>
        </div>
      </div>

      <div class="customer-form">
        <div class="row">
          <label class="col-3">パスワード（確認用）</label>
          <div class="col-1"></div>
          <div class="col-3">

            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>

            <%#= f.text_field :encrypted_password %>
          </div>
        </div>
      </div>

      <div class="actions">
        <div class="row">
          <label class="col-3"></label>
          <div class="col-1"></div>
          <div class="col-3 pr-5">
            <%= f.submit "新規登録" ,class:'btn btn-success w-100' %>
          </div>
        </div>
      </div>

    </div>
  </div>

  <div class="container">
    <div class="col-10 mx-auto">
      <h4><strong>既に登録済みの方</strong></h4>
      <p class="col-5 text-center"><%= link_to 'こちら',  new_customer_session_path, {class: "link_bar"} %>からログインしてください。</p>
    </div>
  </div>

<% end %>

<%#= render "public/shared/links" %>

