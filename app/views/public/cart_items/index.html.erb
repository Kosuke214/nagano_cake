<div class="container">
  <div class="col-11 mx-auto">
    <div class="row">
      <h4>ショッピングカート</h4>
      <div class="ml-auto">
        <%= link_to " カートを空にする ", cart_items_destroy_all_path, method: :delete, class: "btn btn-danger" %>
      </div>

    </div>


    <div class="row">

      <table class="border w-100 mb-3">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @cart_items.each do |cart_item| %>
            <tr>
              <td>
                <%= image_tag cart_item.item.get_image %>
                <%= cart_item.item.name %>
              </td>
              <td>
                <%= cart_item.item.with_tax_price.to_s(:delimited) %>
              </td>
              <td align="center">
                <%= form_with model: cart_item, url: cart_item_path(cart_item.id), method: :patch do |f| %>
                  <%= f.select :amount, *[1..10], :class => "item-amount" %>
                  <%= f.submit " 変更 " ,class:'btn btn-success' %>
                <% end %>
              </td>
              <td>
                <%= cart_item.subtotal.to_s(:delimited) %>
              </td>
              <td align="center">
                <%= link_to " 削除する ", cart_item_path(cart_item.id), method: :delete, class: "btn btn-danger" %>
              </td>
            </tr>
          <% end %>
        </tbody>

      </table>


      <div class="col-12 mb-3">
        <div class="row">
          <%= link_to "/items" do %>
            <button type="button" class="btn btn-primary ml-5"> 買い物を続ける </button>
          <% end %>

          <table class="col-4 ml-auto border">
            <tr>
              <th class="col-4">合計金額</th>
              <td class="col-3">
                <% @cart_items.each do |cart_item| %>
                  <% @total += cart_item.subtotal %>
                <% end %>
                <%= @total.to_s(:delimited) %>
              </td>
            </tr>
          </table>
        </div>
      </div>

      <div class="col-3 mx-auto">
        <%= link_to " 情報入力に進む ", new_order_path, class: "btn btn-success" %>
      </div>


    </div>
  </div>
</div>