<%= form_with model: @customer, url: customers_infomation_path do |f| %>
  <%#= render "public/shared/error_messages", resource: resource %>

  <div class="container">
    <div class="col-10 mx-auto">
      <h2><span> 会員情報編集 </span></h2>
    </div>
  </div>

  <div class="container">
    <div class="col-sm-12 mx-auto">

      <div class="customer-form">
        <div class="row">
          <label class="col-3">氏名</label>
          <div class="col-3">
            <%= f.text_field :last_name %>
          </div>
          <div class="col-3">
            <%= f.text_field :first_name %>
          </div>
        </div>
      </div>

      <div class="customer-form">
        <div class="row">
          <label class="col-3">フリガナ</label>
          <div class="col-3">
            <%= f.text_field :last_name_kana %>
          </div>
          <div class="col-3">
            <%= f.text_field :first_name_kana %>
          </div>
        </div>
      </div>

      <div class="customer-form">
        <div class="row">
          <label class="col-3">郵便番号</label>
          <div class="col-3">
            <%= f.text_field :postal_code %>
          </div>
        </div>
      </div>

      <div class="customer-form">
        <div class="row">
          <label class="col-3">住所</label>
          <div class="col-7">
            <%= f.text_field :address, size: 55 %>
          </div>
        </div>
      </div>

      <div class="customer-form">
        <div class="row">
          <label class="col-3">電話番号</label>
          <div class="col-3">
            <%= f.text_field :telephone_number %>
          </div>
        </div>
      </div>

      <div class="customer-form">
        <div class="row">
          <label class="col-3">メールアドレス</label>
          <div class="col-3">
            <%= f.text_field :email %>
          </div>
        </div>
      </div>

      <div class="actions">
        <div class="row">
          <label class="col-3"></label>
          <div class="col-4">
            <%= f.submit " 編集内容を保存 " ,class:'btn btn-success' %>
          </div>
          <div class="col-2"></div>
          <div class="col-3">
            <%= link_to "customers_unsubscribe_path" do %>
              <button type="button" class="btn btn-danger"> 退会する </button>
            <% end %>
          </div>
        </div>
      </div>

    </div>
  </div>

<% end %>

<%#= render "public/shared/links" %>

