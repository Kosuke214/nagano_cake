<div class="container">
  <div class="col-10 mx-auto">
    <h2><span>マイページ</span></h2>

    <div class="container">
      <div class="col-sm-11 px-0 mx-auto ">
        <div class="row">
          <h4 class="col-2">登録情報</h4>
          <div class="col-1"></div>
          <div class="col-3">
            <%= link_to "customers_infomation_edit_path" do %>
              <button type="button" class="btn btn-success"> 編集する </button>
            <% end %>
          </div>
        </div>


        <table class="table table-hover table-inverse">
          <% @customer.each do |customer| %>
            <tr>
              <th>氏名</th>
              <td><%= customer.last_name %>　<%= customer.first_name %></td>
            </tr>

            <tr>
              <th>カナ</th>
              <td><%= customer.last_name_kana %>　<%= customer.first_name_kana %></td>
            </tr>

            <tr>
              <th>郵便番号</th>
              <td><%= customer.postal_code %></td>
            </tr>

            <tr>
              <th>住所</th>
              <td><%= customer.address %></td>
            </tr>

            <tr>
              <th>電話番号</th>
              <td><%= customer.telephone_number %></td>
            </tr>

            <tr>
              <th>メールアドレス</th>
              <td><%= customer.email %></td>
            </tr>
          <% end %>

        </table>

        <div class="row">
          <h4 class="col-2">配送先</h4>
          <div class="col-1"></div>
          <div class="col-3">
            <%= link_to "addresses_path" do %>
              <button type="button" class="btn btn-primary"> 一覧を見る </button>
            <% end %>
          </div>
        </div>

        <div class="row">
          <h4 class="col-2">注文履歴</h4>
          <div class="col-1"></div>
          <div class="col-3">
            <%= link_to "orders_path" do %>
              <button type="button" class="btn btn-primary"> 一覧を見る </button>
            <% end %>
          </div>
        </div>



      </div>
    </div>

  </div>

</div>

