<div class="container">
  <div class="col-10 mx-auto">
    <h2>注文履歴詳細</h2>
    
    <div class="col-sm-12 col-md-10 col-lg-10 px-4 mx-auto ">

      <div class="row">
        <div class="col-8">
          
          <div class="customer-group">
            <div class="row">
              <label class="col-5">購入者</label>
              <div class="col-7">
                <%= @customer.first_name %> <%= @customer.last_name %> 
              </div>
            </div>
          </div>

          <div class="customer-group">
            <div class="row">
              <label class="col-5">注文日</label>
              <div class="col-7">
                <%= @orders.created_at %>
              </div>
            </div>
          </div>

          <div class="customer-group">
            <div class="row">
              <label class="col-5">配送先</label>
              <div class="col-7">
                <%= @orders.shipping_postalcode %>
                <%= @orders.shipping_address %>
                <%= @orders.shipping_name %>
              </div>
            </div>
          </div>

          <div class="customer-group">
            <div class="row">
              <label class="col-5">支払方法</label>
              <div class="col-7">
                <%= @orders.payment_method %>
              </div>
            </div>
          </div>

          <div class="customer-group">
            <div class="row">
              <label class="col-5">注文ステータス</label>
              <%= form_with model: @orders, do |f| %>
                <div class="col-4">
                  <%= f.select :order_status %>
                </div>
                <div class="col-3">
                  <%= f.submit "更新" ,class:'btn btn-success' %>
                </div>
              <% end %>
            </div>
          </div>

          <div class="row">
            <div class="col-8">
              <table class="table table-hover table-inverse">
                <thead>
                  <tr>
                    <th>商品名</th>
                    <th>単価（税込）</th>
                    <th>数量</th>
                    <th>小計</th>
                    <th>製作ステータス</th>
                    <th></th>
                  </tr>
                </thead>
          
                <tbody>
                  <% @item.each do |item| %>
                    <tr>
                      <td>
                        <%= item.name %>
                      </td>
                      <td>
                        <%= @detail.price_including_tax.to_s(:delimited) %>
                      </td>
                      <td>
                        <%= @detail.amout %>
                      </td>
                      <td>
                        <%= (@detail.price_including_tax * @detail.amout).to_s(:delimited) %>
                      </td>
                      <td>
                        <%= form_with model: @detail, do |f| %>
                          <%= f.select :production_status %>
                        <% end %>
                      </td>
                      <td>
                        <%= form_with model: @detail, do |f| %>
                          <%= f.submit "更新" ,class:'btn btn-success' %>
                        <% end %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
          
              </table>
            </div>
            
            <div class="col-4">
              <label class="col-7">商品合計</label>
              <div class="col-5">
                <%= @orders.created_at %>
              </div>
              <label class="col-7">送料</label>
              <div class="col-5">
                <%= @orders.created_at %>
              </div>
              <label class="col-7">請求金額</label>
              <div class="col-5">
                <%= @orders.created_at %>
              </div>
              
              
              
              
            </div>
          </div>
        </div>
      </div>



    </div>

  </div>

</div>