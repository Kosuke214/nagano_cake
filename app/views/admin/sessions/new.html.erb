<div class="container">
  <div class="col-10 mx-auto">
    <h2>管理者ログイン</h2>

    <div class="container">
      <div class="col-sm-12 col-md-10 col-lg-10 px-4 mx-auto ">
        <%= form_with url: admin_session_path do |f| %>

        <div class="form-group">
          <div class="row">
            <label class="col-4">メールアドレス</label>
            <div class="col-7">
              <%= f.email_field :email, :class => "form-control edit-form", autofocus: true, autocomplete: "email", placeholder:"sample@example.com" %>
            </div>
          </div>


        </div>

        <div class="form-group">
          <div class="row">
            <label class="col-4">パスワード</label>
            <div class="col-7">
              <%= f.password_field :password, :class => "form-control edit-form", autocomplete: "current-password" %>
            </div>
          </div>


        </div>

        <div class="form-group">
          <div class="row">
            <label class="col-4"></label>
            <div class="col-7">
              <%= f.submit "ログイン" ,class:'btn btn-primary' %>
            </div>
          </div>
        </div>
        <% end %>

      </div>
    </div>

  </div>
</div>



<%= render "admin/shared/links" %>
