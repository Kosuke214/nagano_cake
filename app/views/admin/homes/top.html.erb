<div class="container">
  <div class="col-10 mx-auto">
    <h4 class="mb-3"><span class="smoke">　注文履歴一覧　</span></h4>

    <div class="col-12 mx-auto ">
      <table class="w-100 table1">
        <thead>
          <tr class="smoke border_bottom">
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>

        <tbody>
          <% @orders.each do |order| %>
            <tr class="border_bottom">
              <td>
                <%= link_to  admin_order_path(order.id) do %>
                  <%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
                <% end %>
              </td>
              <td>
                <%= order.customer.last_name %><%= order.customer.first_name %>
              </td>
              <td>
                <%= order.order_detail.sum(:amount) %>
              </td>
              <td>
                <%= order.order_status_i18n %>
              </td>


            </tr>

          <% end %>
        </tbody>

      </table>
    </div>


    <div class="row">
      <div class="mx-auto">
        <%= paginate(@pages) %>
      </div>
    </div>

  </div>

</div>

