<div class="container">
  <div class="col-10 mx-auto">
    <h2>注文履歴一覧</h2>

    <div class="col-sm-12 px-0 mx-auto ">
      <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
      </thead>

      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td>
              <%= link_to  admin_order_path(order.id) do %>
                <%= order.created_at %>
              <% end %>
            </td>
            <td>
              <%#= oder.amount %>
            </td>
            <td><%= order.order_status %></td>
            

          </tr>

        <% end %>
      </tbody>

    </table>

    <div class="row">
      <div class="mx-auto">
        <%= paginate(@pages) %>
      </div>
    </div>

  </div>

</div>

