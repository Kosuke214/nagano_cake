<div class="container">
  <div class="col-12">
    <h2><span>商品一覧</span></h2>

    <div class="text-right">
      <%= link_to new_admin_item_path do %>
        <i class="fa-solid fa-circle-plus fa-2x"></i>
      <% end %>

    </div>
  </div>

  <div class="col-sm-12 px-0 mx-auto ">
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>

      <tbody class="no_border">
        <% @items.each do |item| %>
          <tr class="no_border">
            <td class="no_border"><%= item.id %></td>
            <td class="no_border">
              <%= link_to  admin_item_path(item.id), class:"item_list" do %>
                <%= item.name %>
              <% end %>
            </td>
            <td class="no_border"><%= item.price.to_s(:delimited) %></td>
            <td class="no_border"><%= @genre[item.genre_id] %></td>
            <td class="no_border">
              <% if item.is_active %>
                <p class="text-success font-weight-bold">販売中</p>
              <% else %>
                <p class="text-secondary font-weight-bold">販売停止中</p>
              <% end %>
            </td>

          </tr>

        <% end %>
      </tbody>

    </table>

    <div class="row">
      <div class="mx-auto">
        <%= paginate(@pages) %>
      </div>
    </div>

  </div>

</div>

