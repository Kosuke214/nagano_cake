<div class="container">
  <div class="col-10 mx-auto">
    <div class="row">
      <h4 class="ml-5"><span class="smoke">　商品一覧　</span></h4>

      <div class='index_btn mr-3 ml-auto'>
        <a href='/admin/items/new'>＋</a>
      </div>


    </div>

  </div>

  <div class="col-10 mt-3 mx-auto">
    <table class="w-100 table1">
      <thead>
        <tr class="smoke">
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>

      <tbody>
        <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td>
              <%= link_to  admin_item_path(item.id), class:"item_list" do %>
                <%= item.name %>
              <% end %>
            </td>
            <td><%= item.price.to_s(:delimited) %></td>
            <td><%= item.genre.name %></td>
            <td>
              <% if item.is_active %>
                <p class="text-success font-weight-bold">販売中</p>
              <% else %>
                <p class="text-secondary font-weight-bold">販売停止中</p>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>

    </table>

    <div class="row">
      <div class="mx-auto">
        <%= paginate @items %>
      </div>
    </div>

  </div>

</div>

