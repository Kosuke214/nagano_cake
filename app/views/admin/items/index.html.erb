<div class="container">
  <div class="col-10 mx-auto">
    <h2>商品一覧</h2>

    <div class="text-right">
      <%= link_to new_admin_item_path do %>
        <i class="fa-solid fa-circle-plus fa-2x"></i>
      <% end %>

    </div>

    <div class="container">
      <div class="col-sm-12 px-0 mx-auto ">
        <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>

        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td><%= item.id %></td>
              <td>
                <%= link_to  admin_item_path(item.id) do %>
                  <%= item.name %>
                <% end %>
              </td>
              <td><%= item.price %></td>
              <td><%= item.genre_id %></td>
              <td><%= item.is_active ? '販売中' : '販売停止中' %></td>

            </tr>

          <% end %>
        </tbody>

      </table>

      <div class="row">
        <div class="mx-auto">
          <%= paginate(@pages) %>
        </div>
      </div>


      </div>
    </div>

  </div>

</div>

