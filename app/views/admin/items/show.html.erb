<div class="container">
  <div class="col-10 mx-auto">
    <h4 class="ml-5 mb-5"><span class="smoke">　商品詳細　</span></h4>
    <div class="container">
      <div class="col-sm-12 col-md-10 col-lg-10 px-4 mx-auto ">


        <div class="picture">
          <div class="row">
            <div class="col-4">
              <%= image_tag @item.get_image %>
            </div>
            <div class="col-8">
              <div class="item-group">
                <div class="row">
                  <label class="col-5">商品名</label>
                  <div class="col-7">
                    <%= @item.name %>
                  </div>
                </div>
              </div>

              <div class="item-group">
                <div class="row">
                  <label class="col-5">商品説明</label>
                  <div class="col-7">
                    <%= @item.introduction %>
                  </div>
                </div>
              </div>

              <div class="item-group">
                <div class="row">
                  <label class="col-5">ジャンル</label>
                  <div class="col-7">
                    <%= @item.genre.name %>
                  </div>
                </div>
              </div>

              <div class="item-group">
                <div class="row">
                  <label class="col-5">税抜価格</label>
                  <div class="col-7">
                    <%= (@item.price*1.1).floor.to_s(:delimited) %> (<%= @item.price.to_s(:delimited) %>)円
                  </div>

                </div>
              </div>


              <div class="item-group">
                <div class="row">
                  <label class="col-5">販売ステータス</label>
                  <div class="col-7">
                    <div>
                      <% if @item.is_active %>
                        <p class="text-success font-weight-bold">販売中</p>
                      <% else %>
                        <p class="text-secondary font-weight-bold">販売停止中</p>
                      <% end %>

                    </div>
                  </div>
                </div>
              </div>

              <div class="row">
                <div class="col-10 ml-5">
                  <%= link_to "編集する", edit_admin_item_path, class: 'btn btn-success' %>
                </div>
              </div>
            </div>
          </div>
        </div>



      </div>
    </div>

  </div>

</div>