<div class="container">
  <div class="col-10 mx-auto">
    <h2><span> <%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細 </span></h2>

        <%#<div class="picture"> %>
          <%# <div class="row"> %>
    <div class="customer-group">
      <div class="row">
        <label class="col-3">会員ID</label>
        <div class="col-7">
          <%= @customer.id %>
        </div>
      </div>
    </div>

    <div class="customer-group">
      <div class="row">
        <label class="col-3">氏名</label>
        <div class="col-7">
          <%= @customer.last_name %> <%= @customer.first_name %>
        </div>
      </div>
    </div>

    <div class="customer-group">
      <div class="row">
        <label class="col-3">フリガナ</label>
        <div class="col-7">
          <%= @customer.last_name_kana %> <%= @customer.first_name_kana %>
        </div>
      </div>
    </div>

    <div class="customer-group">
      <div class="row">
        <label class="col-3">郵便番号</label>
        <div class="col-7">
          <%= @customer.postal_code %>
        </div>
      </div>
    </div>

    <div class="customer-group">
      <div class="row">
        <label class="col-3">住所</label>
        <div class="col-7">
          <%= @customer.customer_address %>
        </div>
      </div>
    </div>

    <div class="customer-group">
      <div class="row">
        <label class="col-3">電話番号</label>
        <div class="col-7">
          <%= @customer.telephone_number %>
        </div>
      </div>
    </div>

    <div class="customer-group">
      <div class="row">
        <label class="col-3">メールアドレス</label>
        <div class="col-7">
          <%= @customer.email %>
        </div>
      </div>
    </div>


    <div class="customer-group">
      <div class="row">
        <label class="col-3">会員ステータス</label>
        <div class="col-7">
          <div>
            <% if @customer.is_deleted %>
              <p class="text-secondary font-weight-bold">退会</p>
            <% else %>
              <p class="text-success font-weight-bold">有効</p>
            <% end %>

          </div>
        </div>
      </div>
    </div>

    <div class="customer-group">
      <div class="row">
        <label class="col-3"></label>
          <div class="col-7">
            <%= link_to " 編集する ", edit_admin_customer_path, class: 'btn btn-success' %>
            <%= link_to " 注文履歴一覧を見る ", "/orders", class: 'btn btn-primary' %>
          </div>

      </div>
    </div>

  </div>

</div>