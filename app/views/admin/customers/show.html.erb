<div class="container">
  <div class="col-10 mx-auto">
    <h2><% @customer.first_name %><% @customer.last_name %>さんの会員詳細</h2>
    <div class="container">
      <div class="col-sm-12 col-md-10 col-lg-10 px-4 mx-auto ">


        <div class="picture">
          <div class="row">
            <div class="col-8">
              <div class="customer-group">
                <div class="row">
                  <label class="col-5">会員ID</label>
                  <div class="col-7">
                    <%= @customer.id %>
                  </div>
                </div>
              </div>

              <div class="customer-group">
                <div class="row">
                  <label class="col-5">氏名</label>
                  <div class="col-7">
                    <%= @customer.first_name %> <%= @customer.last_name %>
                  </div>
                </div>
              </div>

              <div class="customer-group">
                <div class="row">
                  <label class="col-5">フリガナ</label>
                  <div class="col-7">
                    <%= @customer.first_name_kana %> <%= @customer.last_name_kana %>
                  </div>
                </div>
              </div>

              <div class="customer-group">
                <div class="row">
                  <label class="col-5">郵便番号</label>
                  <div class="col-7">
                    <%= @customer.postal_code %>
                  </div>
                </div>
              </div>

              <div class="customer-group">
                <div class="row">
                  <label class="col-5">住所</label>
                  <div class="col-7">
                    <%= @customer.address %>
                  </div>
                </div>
              </div>

              <div class="customer-group">
                <div class="row">
                  <label class="col-5">電話番号</label>
                  <div class="col-7">
                    <%= @customer.telephone_number %>
                  </div>
                </div>
              </div>

              <div class="customer-group">
                <div class="row">
                  <label class="col-5">メールアドレス</label>
                  <div class="col-7">
                    <%= @customer.email %>
                  </div>
                </div>
              </div>


              <div class="customer-group">
                <div class="row">
                  <label class="col-5">会員ステータス</label>
                  <div class="col-7">
                    <div>
                      <%= @customer.is_deleted ? '退会' : '有効' %>

                    </div>
                  </div>
                </div>
              </div>

              <div class="row">
                <div class="col-5">
                  <%= link_to "編集する", edit_admin_customer_path, class: 'btn btn-success' %>
                </div>
                <div class="col-7">
                  <%= link_to "注文履歴一覧を見る", "/orders", class: 'btn btn-primary' %>
                </div>
              </div>
            </div>
          </div>
        </div>



      </div>
    </div>

  </div>

</div>