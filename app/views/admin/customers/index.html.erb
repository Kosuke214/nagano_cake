<div class="container">
  <div class="col-10 mx-auto">
    <h2><span>会員一覧</span></h2>

    <div class="container">
      <div class="col-sm-12 px-0 mx-auto ">
        <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>

        <tbody>
          <% @customers.each do |customer| %>
            <tr class="border-bottom">
              <td><%= customer.id %></td>
              <td>
                <%= link_to admin_customer_path(customer.id), class:"customer_list" do %>
                  <%= customer.last_name %><%= customer.first_name %>
                <% end %>
              </td>
              <td><%= customer.email %></td>
              <td>
                <% if customer.is_deleted %>
                  <p class="text-secondary font-weight-bold">退会</p>
                <% else %>
                  <p class="text-success font-weight-bold">有効</p>
                <% end %>
              </td>
            </tr>

          <% end %>
        </tbody>

      </table>

      <div class="row">
        <div class="mx-auto">
          <%= paginate(@pages) %>
        </div>
      </div>


      </div>
    </div>

  </div>

</div>

